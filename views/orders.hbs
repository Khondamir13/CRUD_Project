{{#if my_orders.length}}
  <ul>
    <li class="fw-bold">Active: Approved by admin, You can buy .</li>
    <li class="fw-bold">Inactive: Reviewed by admin, not approved, You cannot buy</li>
    <li class="fw-bold"> Pending: Not yet reviewed by admin</li>
  </ul>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each my_orders}}
      <div class="col">
        <div class="card shadow-sm">
          <img src="{{product_id.image}}" />
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <p class="card-text fw-bold"> Title : {{product_id.title}}</p>
              <p class="card-text fw-bold">Status: {{status}}</p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <p class="card-text"> Description : {{product_id.description}}</p>
              <p class="card-text">Price: {{product_id.price}}.00$</p>
            </div>
            <a type="button" class="btn btn-outline-danger" href="/cancel-order/{{_id}}">Cancel</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <section class="page_404 w-75 mx-auto">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-10 col-sm-offset-1 text-center">
          <div class="four_zero_four_bg">
            <h1 class="text-center">404</h1>
          </div>
          <div class="contant_box_404">
            <h3 class="h2">No Orders</h3>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/if}}