<div class="w-75 mx-auto">
  <p class="fs-1">Edit product</p>
  {{#if changeProduct}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong>Error!</strong>
      {{changeProduct}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      </button>
    </div>
  {{/if}}
  <form action="/admin/edit-product/{{product._id}}" , method="post">
    <div class="form-floating mb-3">
      <input type="text" value="{{product.title}}" class="form-control" name="title" id="floatingInput" placeholder="title" />
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Description" name="description" id="floatingTextarea2" style="height: 120px">{{product.description}}</textarea>
      <label for="floatingTextarea2">Description</label>
    </div>
    <div class="mb-3">
      <select name="status" id="cars" class="form-control">
        <option disabled selected value>Select the status, current status is: {{product.status}}</option>
        <option value="pending">Pending</option>
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
      </select>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text bg-light">$</span>
      <div class="form-floating">
        <input type="number" value="{{product.price}}" class="form-control" name="price" id="floatingInputGroup1" placeholder="Price" />
        <label for="floatingInputGroup1">Price</label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Edit product</button>
  </form>
</div>